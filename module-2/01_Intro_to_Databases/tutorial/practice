SELECT topping_name
	, additional_price
FROM topping;

SELECT size_id
	, size_description
	, diameter
	, base_price
FROM size;

SELECT pizza_id
	, sale_id
	, size_id
	, crust
	, sauce
	, price
	, additional_instructions
FROM pizza
WHERE size_id = 'S'
	AND crust = 'Thin';
	
SELECT pizza_id
	, sale_id
	, size_id
	, crust
	, sauce
	, price
	, additional_instructions
FROM pizza
WHERE size_id = 'S'
	OR crust = 'Thin';
	
SELECT pizza_id
	, sale_id
	, size_id
	, crust
	, sauce
	, price
	, additional_instructions
FROM pizza
WHERE size_id != 'S';

SELECT pizza_id
	, sale_id
	, size_id
	, crust
	, sauce
	, price
	, additional_instructions
FROM pizza
WHERE price < 10.99;

SELECT sale_id
	, total
	, is_delivery
	, customer_id
FROM sale
WHERE is_delivery = true;

SELECT sale_id
	, total
	, is_delivery
	, customer_id
FROM sale
WHERE customer_id IS NULL;

SELECT sale_id
	, total
	, is_delivery
	, customer_id
FROM sale
WHERE customer_id IS NOT NULL;